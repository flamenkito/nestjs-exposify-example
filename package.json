{
  "name": "nestjs-exposify-example",
  "version": "0.0.1",
  "description": "Example NestJS application demonstrating nestjs-exposify library usage",
  "author": "asutov@outlook.com",
  "private": true,
  "license": "Unlicense",
  "workspaces": [
    "apps/*",
    "libs/*"
  ],
  "scripts": {
    "dev": "npx workgraph watch --filter 'libs/*'",
    "build": "npx workgraph build",
    "start:prod": "npm run start:prod -w @example/api"
  },
  "workgraph": {
    "sources": {
      "apps/web-angular/src/generated": "npx exposify-codegen api -o ./apps/web-angular/src/generated"
    }
  }
}
