{
  "name": "nestjs-exposify-example",
  "version": "0.0.1",
  "description": "Example NestJS application demonstrating nestjs-exposify library usage",
  "author": "asutov@outlook.com",
  "private": true,
  "license": "Unlicense",
  "workspaces": [
    "apps/*",
    "libs/*"
  ],
  "scripts": {
    "dev": "npx workgraph watch api web-angular web-preact",
    "build": "npx workgraph build",
    "start:prod": "npm run start:prod -w @example/api",
    "format": "prettier --write \"apps/**/*.{ts,tsx,css,html}\" \"libs/**/*.ts\"",
    "clean": "rm -rf dist apps/*/dist apps/*/src/generated libs/*/dist"
  },
  "devDependencies": {
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "prettier": "^3.4.2"
  },
  "workgraph": {
    "sources": {
      "web-angular": {
        "command": "npx exposify-codegen api --output ./apps/web-angular/src/generated --target angular",
        "deps": ["api"]
      },
      "web-preact": {
        "command": "npx exposify-codegen api --output ./apps/web-preact/src/generated --target preact",
        "deps": ["api"]
      }
    }
  }
}
