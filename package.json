{
  "name": "nestjs-exposify-example",
  "version": "0.0.1",
  "description": "Example NestJS application demonstrating nestjs-exposify library usage",
  "author": "asutov@outlook.com",
  "private": true,
  "license": "Unlicense",
  "workspaces": [
    "apps/*",
    "libs/*"
  ],
  "scripts": {
    "dev:api": "npm run dev -w @example/api",
    "dev:web": "npm run dev -w @example/web-preact",
    "dev:web-angular": "npm run dev -w @example/web-angular",
    "build:auth": "npm run build -w @example/auth",
    "build:client-gen": "npm run build -w @example/client-gen",
    "build:api": "npm run build -w @example/api",
    "build:web": "npm run build -w @example/web-preact",
    "build:web-angular": "npm run build -w @example/web-angular",
    "build": "npm run build:auth && npm run build:client-gen && npm run build:web && npm run build:web-angular && npm run build:api",
    "generate:client": "node libs/client-gen/dist/cli.js -i ./apps/api/src -i ./libs/auth/src -o ./apps/web-angular/src/generated",
    "start:prod": "npm run start:prod -w @example/api"
  }
}
